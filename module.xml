<?xml version="1.0" ?>
<module>

  <Welcome f="nodata">
    <Welcome>
      <Logo t="webview" f="nolabel">
        <!--
        <markdown>
          <p>This module was created for the The Tundzha Regional Archaeological Project, based at Macquarie University, Sydney, Australia. The module has been designed to document the current condition and an exact location of burial mounds by broader community in Bulgaria. This module is designed to foster awareness of and community engagement in monitoring cultural heritage in Bulgaria.</p>
          ![](files/data/gallery/Front_Page_And_Icon/Mound.jpg)
        </markdown>
      -->
      </Logo>
      <Start t="button" l="Login/Manual"/>
    </Welcome>
  </Welcome>

  <Login f="nodata">
    <Login>
      <Users t="dropdown" f="user nocertainty noannotation"/>
      <Log_in  t="button" ll="Start"/>
      <Sign_up t="button" l="signup"/>
    </Login>
    <Manual>
      <Manual t="webview" f="nolabel">
        <!--
        <markdown>
          ![](files/data/guide/MoundsCommunityManual.html)
        </markdown>
      -->
      </Manual>
      <Go_to_Login_Tab t="button" l="Login/Login"/>
    </Manual>
  </Login>

  <Start f="nodata">
    <Start f="noscroll">
      <Record_New_Mound t="button" f="nocertainty noannotation" l="Mound"/>
      <autonum/>
      <My_Last_3_Records t="list">
      </My_Last_3_Records>
    </Start>
    <search/>
    <Map f="noscroll">
      <Map t="map"/>
    </Map>
  </Start>

  <Mound>
    <Mound_Admin>
      <Validate t="button"/>
      <author f="id nocertainty noannotation">
        <str>
          <pos>3</pos>
          <fmt>$0</fmt>
        </str>
      </author>
      <timestamp f="nocertainty noannotation"/>
      <Mound_ID f="id nocertainty noannotation autonum readonly">
        <str>
          <pos>1</pos>
          <fmt>$0-</fmt>
        </str>
      </Mound_ID>
      <Mound_Name f="id">
        <str>
          <pos>2</pos>
          <fmt>$0-</fmt>
        </str>
      </Mound_Name>
      <gps f="notnull"/>
      <Description_of_mound_or_location/>
      <cols>
        <col>
          <Height_Max b="decimal" f="notnull">
            Height Max (m)
          </Height_Max>
          <Diameter_Max   b="decimal" f="notnull">
            Diameter Max (m)
            <desc>
              The longest axis in the diameter
            </desc>
          </Diameter_Max>
        </col>
        <col>
          <Height_Min b="decimal">
            Height Min (m)
          </Height_Min>
          <Diameter_Min   b="decimal">
            Diameter Min (m)
            <desc>
              The shorter axis in diameter, if mound ellipsoid
            </desc>
          </Diameter_Min>
        </col>
      </cols>
      <Width b="decimal">
        Width (m)
        <desc>The shorter axis in diameter, if mound ellipsoid</desc>
      </Width>
      <Image t="camera"/>
    </Mound_Admin>
